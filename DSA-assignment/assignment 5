#include <stdio.h>
#define MAX 10

int graph[MAX][MAX];
int visited[MAX];
int n;

void addEdge(int u,int v){
    graph[u][v]=1;
    graph[v][u]=1;
}

void BFS(int start){
    int queue[MAX],front=0,rear=0;
    for(int i=0;i<n;i++) visited[i]=0;

    visited[start]=1;
    queue[rear++]=start;

    while(front<rear){
        int v=queue[front++];
        printf("%d ",v);
        for(int i=0;i<n;i++){
            if(graph[v][i] && !visited[i]){
                visited[i]=1;
                queue[rear++]=i;
            }
        }
    }
}

int main(){
    n=5;
    addEdge(0,1);
    addEdge(0,2);
    addEdge(1,3);
    addEdge(2,4);

    printf("BFS traversal: ");
    BFS(0);
    return 0;
}